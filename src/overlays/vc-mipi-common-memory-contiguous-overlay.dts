/dts-v1/;
/plugin/;

/{
	compatible = "brcm,bcm2708";

	fragment@0 {
		target-path = "/reserved-memory";
		__overlay__ {

			linux,cma {

				size = <0x18000000>; /* 384MiB */
			};
		};
	};
};
